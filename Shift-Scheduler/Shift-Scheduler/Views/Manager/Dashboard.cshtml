@model IEnumerable<Shift_Scheduler.ViewModel.DashBoardViewModel>

@{
    ViewBag.Title = "Dashboard";
}
<div class="container-fluid">

    <h1 class="page-header">Dashboard</h1>
    <div class="col-xs-12 col-md-8">
        <div class="row placeholders">
            <div class="col-xs-6 col-sm-3 placeholder">
                <img src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" width="200" height="200" class="img-responsive" alt="Generic placeholder thumbnail">
            </div>
            <div class="col-xs-6 col-sm-3 placeholder">
                <h3 class="text-left">Name: Kevin Tam</h3>
                <h3 class="text-left">Role: Manager</h3>
                <h3 class="text-left">Department: Developer</h3>
            </div>

        </div>
    </div>
    <div class="col-xs-6 col-md-4 rightbar img-rounded">
        <h4 class="sub-header">Shift Change Request</h4>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Shift Change ID</th>
                        <th>Employee First Name</th>
                        <th>Employee Last Name</th>
                        <th>New Employee First Name</th>
                        <th>New Employee Last Name</th>
                        <th>Approval</th>
                        <th>Shift Schedule</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var emp in Model)
                        {
                            <tr>
                                <td>@emp.shiftChangeRequestId</td>
                                <td>@emp.currentWorkingEmpFirstName</td>
                                <td>@emp.currentWorkingEmpLastName</td>
                                <td>@emp.newWorkingEmpFirstName</td>
                                <td>@emp.newWorkingEmpLastName</td>
                                <td>@emp.approvalStatus</td>
                                <td>@emp.shiftScheduleID</td>
                            </tr>
                        }
                    }
                   
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="col-xs-12 col-md-8">
    <h2 class="sub-header">Employee Available Today</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone Number</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.empAvail != null)
                {
                    foreach (var emp in ViewBag.empAvail)
                    {
                        <tr>
                            <td>@emp.employeeId</td>
                            <td>@emp.firstName</td>
                            <td>@emp.lastName</td>
                            <td>@emp.phoneNumber</td>
                            <td>@emp.role</td>

                        </tr>
                    }
                }
                
            </tbody>
        </table>
    </div>
</div>

<div class="col-xs-6 col-md-4 rightbar img-rounded">
    <h4 class="sub-header">Vacation Request</h4>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Vacation Request ID</th>
                    <th>Date Start</th>
                    <th>Date End</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Employee Id</th>
                    <th>Approval</th>
              
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.vacation != null)
                {
                    foreach (var vacay in ViewBag.vacation)
                    {
                        <tr>
                            <td>@vacay</td>

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

